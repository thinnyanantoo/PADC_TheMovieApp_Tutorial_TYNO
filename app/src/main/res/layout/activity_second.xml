<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SecondActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#151C25"
            android:alpha="300">
             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="220dp"
                 android:alpha="240"
                 android:background="#151C25">

                 <ImageView
                     android:id="@+id/ivOverViewMovie"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:alpha="360"
                     android:scaleType="centerCrop"
                     android:src="@drawable/detailmovie" />

                 <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_keyboard_arrow_left_24dp"
                        android:background="@drawable/circle"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="2.5"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_search__26dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp" />
                        <TextView
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:layout_gravity="bottom"
                                android:text="2016"
                                android:background="@drawable/text_corner_round"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:layout_marginBottom="18dp"
                                android:layout_marginStart="20dp"/>

                            <TextView
                                android:id="@+id/averageVote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9,25"
                                android:textColor="@android:color/white"
                                android:textSize="40sp"
                                android:layout_gravity="end|bottom"
                                android:layout_marginBottom="18dp"
                                android:layout_marginEnd="20dp"/>

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:numStars="5"
                                android:rating="5"
                                android:theme="@style/RatingBar"
                                android:layout_gravity="bottom|end"
                                android:layout_marginBottom="35dp"
                                android:layout_marginEnd="100dp"
                                />
                            <TextView
                                android:id="@+id/voteCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="37552 VOTES"
                                style="@style/smallestText"
                                android:textSize="13sp"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="bottom|end"
                                android:layout_marginBottom="12dp"
                                android:layout_marginEnd="112dp"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="120"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="120"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantastic Beasts and Where \nto Find Them"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:weightSum="9">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_access_time_black_24dp" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1.5"
                            android:text="2h 3min"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            style="@style/text_style_in_round_txt"
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/round_gray_textview"
                            android:text="Family" />

                        <TextView
                            style="@style/text_style_in_round_txt"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/round_gray_textview"
                            android:text="Fantancy" />

                        <TextView
                            style="@style/text_style_in_round_txt"
                            android:layout_width="75dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/round_gray_textview"
                            android:text="Advanture" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5.5"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/ic_favorite_border_black_24dp" />
        </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:text="STROYLINE"
                    android:textColor="@color/colorTextSmall"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/tvOverView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year Seventy year "
                    android:textColor="@android:color/white"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="150dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/color_yellow"
                        android:gravity="center"
                        android:text="PLAY TRAILER"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_play_circle_filled_black_24dp"
                        app:iconTint="@color/color_main_bg"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.round" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="150dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="RATE MOVIE"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_star_black_24dp"
                        app:iconTint="@color/color_yellow"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.round"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="2dp" />
                </LinearLayout>
        <include layout = "@layout/layout_cast_view_pod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vpCast"/>

                <TextView
                    style="@style/SecondSmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Film"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original Title"
                android:textColor="#3F4655"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvOriginalImpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantastic Beasts and Where to Find Them"
                android:textColor="@android:color/white"
                android:layout_marginStart="45dp"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="#3F4655"
                android:textSize="12sp"
               />
            <TextView
                android:id="@+id/tvTypeImpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantastic Beasts and Where to Find Them"
                android:textColor="@android:color/white"
                android:layout_marginStart="85dp"
                android:textSize="12sp"
        />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
       >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production"
                android:textColor="#3F4655"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvProductionImpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantastic Beasts and Where to Find Them"
                android:textColor="@android:color/white"
                android:layout_marginStart="50dp"
                android:textSize="12sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premiere"
                android:textColor="#3F4655"
                android:textSize="12sp"
             />
            <TextView
                android:id="@+id/tvPremiereImpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="Fantastic Beasts and Where to Find Them"
                android:textColor="@android:color/white"
                android:textSize="12sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#3F4655"
                android:textSize="12sp"
            />
            <TextView
                android:id="@+id/tvDescriptionImpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Fantastic Beasts and Where to Find Them"
                android:textColor="@android:color/white"
                android:textSize="12sp"
          />
        </LinearLayout>
                <include layout="@layout/layout_creators"
                    android:id="@+id/vpCreator"/>
    </LinearLayout>
            <include
                android:id="@+id/vpEmptySecond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/view_pod_empty"
                android:visibility="gone"/>
        </LinearLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>