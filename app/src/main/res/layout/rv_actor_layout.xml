<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/ivActor"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:alpha="18.9"
            android:scaleType="centerCrop"
            android:src="@drawable/actor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/tvActorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jung Kook"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tvActorName">
            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_black_24dp"
              />
        <TextView
            android:id="@+id/tvLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You like 13 movies"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginStart="5dp"
            style="@style/smallestText"
            android:layout_below="@+id/tvActorName"
            android:layout_toRightOf="@id/ivLike"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>



</LinearLayout>