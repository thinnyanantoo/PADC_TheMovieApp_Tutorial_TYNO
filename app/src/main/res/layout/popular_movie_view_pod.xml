<?xml version="1.0" encoding="utf-8"?>
<com.example.padc_themovieapp_tutorial_tyno.views.viewpods.PopularMovieViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginTop="15dp">
    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEST  POPULAR  FILMS  AND  SERIES"
        style="@style/SmallTilte"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPopularFilm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvPopular"
        android:layout_marginTop="13dp"
        android:nestedScrollingEnabled="true"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/rv_best_popular_film" />

</com.example.padc_themovieapp_tutorial_tyno.views.viewpods.PopularMovieViewPod>